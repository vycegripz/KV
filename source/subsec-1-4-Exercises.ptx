                <!-- 1. Matching Problem - text-->
                <exercise>
                    <statement>
                        <p>Match the IPA symbol to its closest English sound approximation:</p>
                        <ol label="A">
                            <li>[y]</li>
                            <li>[ə]</li>
                            <li>[ɔ]</li>
                            <li>[ʒ]</li>
                        </ol>
                        <ol label="1">
                            <li>The "au" in <em>bought</em> </li>
                            <li>The "ew" in <em>pewter</em> </li>
                            <li>The "s" in <em>leisure</em> </li>
                            <li>The "u" in <em>butter</em> </li>
                        </ol>
                    </statement>
                    <hint><image source="ipa.PNG" width="50%"></image></hint>
                    <solution><p>A-2, B-4, C-1, D-3</p></solution>
                </exercise>               

