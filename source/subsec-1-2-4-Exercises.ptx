                <!-- 1. Matching Problem - text-->
                
                    <exercise>
                    <statement>
                        <p>Match the IPA to it's approximate English sounds:</p>
                       <sidebyside margins="auto">                        
    
                        <ol marker="A.">
                            <li>[bale]</li>
                            <li>[ublije]</li>
                            <li>[dusmɑ̃]</li>
                            <li>[mɑ̃ke]</li>
                        </ol>
                        <ol marker="1.">
                            <li><m>oo-blee-yay</m></li>
                            <li><m>maw^n-kay</m></li>
                            <li><m>baw-lay</m></li>
                            <li><m>doos-maw^n</m></li>                            
                        </ol>
                    </sidebyside>
                    </statement>
                    <hint><image source="ipa.PNG" width="50%"></image></hint>
                    <solution><p>A-3, B-1, C-4, D-2</p></solution>
                </exercise>               
                <exercise>
                    <statement>
                        <p>Match the Louisiana Creole word to its IPA:</p>
                        
                       <sidebyside margins="auto">

                        <ol marker="A.">
                            <li>dousmen</li>
                            <li>balé</li>
                            <li>manké</li>
                            <li>oubliyé</li>
                        </ol>
                        <ol marker="1.">
                            <li>[mɑ̃ke]</li> 
                            <li>[bale]</li>
                            <li>[ublije]</li>
                            <li>[dusmɑ̃]</li>                                       
                        </ol>
                    </sidebyside>
                </statement>
                    <hint><image source="ipa.PNG" width="50%"></image></hint>
                    <solution><p>A-4, B-2, C-1, D-3</p></solution>
                </exercise>  
                <exercise>
                    <statement>
                        <p>Match the Louisiana Creole word to its English approximation:</p>
                     
                        <sidebyside margins="auto">

                        <ol marker="A.">
                            <li>dousmen</li>
                            <li>balé</li>
                            <li>manké</li>
                            <li>oubliyé</li>
                        </ol>
                        <ol marker="1.">
                            <li><m>oo-blee-yay</m></li>
                            <li><m>doos-maw^n</m></li>   
                            <li><m>baw-lay</m></li>                                   
                            <li><m>maw^n-kay</m></li>                              
                        </ol>
                    </sidebyside>
                    </statement>
                    <hint><image source="ipa.PNG" width="50%"></image></hint>
                    <solution><p>A-2, B-3, C-4, D-1</p></solution>
                </exercise> 

           
                 <!-- 4. Matching - interactive !!Cardsort doesn't work on mobile!! -->
                 <exercise>
            <statement>
              <p>
                Match the word in Louisiana Creole to <em>both</em> its IPA symbol and English approximation by dragging from one box to it's appropriate pair:
              </p>
            </statement>
            <hint>
                     <image source="ipa.PNG" width="50%"></image>            
            </hint>
            <matching>
                
                <premise ref="fims fimt">fim</premise>
                <premise ref="fenms fenmt">fenm</premise>
                <premise ref="fimms fimmt">fimm</premise>
                <!--   -->
                <response xml:id="fims" order="1">[fɛ̃]</response>
                <response xml:id="fenms" order="2">[fɑ̃m]</response>
                <response xml:id="fimms" order="3">[fim]</response>
                <response xml:id="fimt" order="5"><m>feh^m</m></response>
                <response xml:id="fenmt" order="4"><m>faw^m</m></response>
                <response xml:id="fimmt" order="4"><m>feem</m></response>
            </matching>
        </exercise> 

                
                <!-- 5. Multiple Choice Problem - text-->
                <exercise>
                    <statement>
                        <p>Which IPA symbol represents the sound of the Louisiana Creole word <em>çé</em>?</p>
                        <ol>
                            <li>[ce]</li>
                            <li>[ze]</li>
                            <li>[sɛ]</li>
                            <li>[se]</li>
                            <li>[ɔə]</li>
                        </ol>
                    </statement>
                    <solution><p><em>4. [se]</em>.</p></solution>
                </exercise>                                
              


           
    
